<p id="notice"><%= notice %></p>
<div style="display: flex; justify-content: space-around; align-items: top;">
  <div>
    <%= render "new" %>
  </div>

  <div id="show_post">
  </div>
</div>

<%= form_with(url: root_path, method: :get, remote: true) do |f| %>
  <%= f.text_field :q %>
  <%= f.submit :buscar %>
<% end %>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="table">
    <% @posts.each do |post| %>
      <tr id="post_<%=post.id%>">
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post, remote: true %></td>
        <td><%= link_to 'Edit', edit_post_path(post.id), remote: true %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div id="modal_edit"> </div>